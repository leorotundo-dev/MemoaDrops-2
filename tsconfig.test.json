{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "types": ["jest", "node"]
  },
  "include": ["src", "test", "tests"],
  "exclude": ["node_modules", "dist"]
}
